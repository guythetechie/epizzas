@inject IDialogService DialogService

@rendermode InteractiveServer

<FluentStack VerticalAlignment="VerticalAlignment.Center">
    <FluentTextField @bind-Value=@orderId
                     Placeholder="Search for order ID"
                     style="width: 25%;" />
    <FluentButton Appearance="Appearance.Accent" OnClick="@OnCreateOrderButtonClicked">Create order</FluentButton>
</FluentStack>

@code {
    private string orderId = string.Empty;

    private async Task OnCreateOrderButtonClicked()
    {
        await DialogService.ShowDialogAsync<CreateDialog>(Unit.Default, new DialogParameters
            {
                PreventDismissOnOverlayClick = true,
                TrapFocus = true
            });
    }
}